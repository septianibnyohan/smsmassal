<div class="row">
    {{#each contacts}}
    <div class="col-md-3">
        <div class="card">
            <div class="card-body">
                <h3>{{name}}</h3>
                <p>{{phone}}</p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <a href="/contacts/delete/{{_id}}" class="btn btn-danger">
                    Delete
                </a>
                <a href="/contacts/edit/{{_id}}" class="btn btn-secondary">
                    Edit
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>