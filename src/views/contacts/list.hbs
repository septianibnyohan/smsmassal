<div class="row ">
    
    <form action="/contacts/list" method="GET" class="input-group justify-content-center">
        <div class="form-outline">
            <input id="search-focus" type="search" id="form1" name="search" class="form-control" />
            <label class="form-label" for="form1">Search</label>
        </div>
        <div class="form-outline">
            <button type="submit" class="btn btn-primary form-control">
                Search
            </button>
        </div>
    </form>
    
</div>

<div class="row">
    {{#each contacts}}
    <div class="col-md-3 pb-3">
        <div class="card">
            <div class="card-body">
                <h3>{{name}}</h3>
                <p>{{phone}}</p>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <a href="/contacts/delete/{{_id}}" class="btn btn-danger">
                    Delete
                </a>
                <a href="/contacts/edit/{{_id}}" class="btn btn-secondary">
                    Edit
                </a>
            </div>
        </div>
    </div>
    {{/each}}
</div>
<div class="row justify-content-center">
    <nav aria-label="Page navigation">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="#">Previous</a></li>
            <li class="page-item"><a class="page-link" href="#">1</a></li>
            <li class="page-item"><a class="page-link" href="#">2</a></li>
            <li class="page-item"><a class="page-link" href="#">3</a></li>
            <li class="page-item"><a class="page-link" href="#">Next</a></li>
        </ul>
    </nav>
</div>